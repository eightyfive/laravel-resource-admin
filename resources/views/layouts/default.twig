<!DOCTYPE html>
<html>
  <head>
    {% include 'radmin::layouts/_html-head' %}
    {% block styles '' %}
  </head>
  <body>
    {% block header %}
      {% include 'radmin::layouts/_header' %}
    {% endblock %}

    <div class="ui container">
      {% include 'radmin::layouts/_flash' %}
      {% block content '' %}
      <div class="ui hidden divider"></div>
    </div>

    {% block footer '' %}
    {% for script in scripts %}
      <script src="{{ script }}"></script>
    {% endfor %}
    {% block javascripts %}
      {% include 'radmin::layouts/_javascripts' %}
    {% endblock %}
  </body>
</html>
