<script>
  function bootUi (ctx) {
    if (!ctx) ctx = document.body

    $('.ui.dropdown', ctx).dropdown({forceSelection: false})
    $('.ui.checkbox', ctx).checkbox()
    $('.tabular.menu .item', ctx).tab({history: true, historyType: 'hash'})
  }
  bootUi()

  $(document).on('click', '[data-confirm]', function (ev) {
    var ok = confirm($(ev.currentTarget).data('confirm'))
    if (!ok) {
      ev.preventDefault()
    }
  })
</script>
