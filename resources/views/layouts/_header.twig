<br>
<div class="ui container">
  <div class="ui menu">
    {% for label,url in menu %}
    <a href="{{ url }}" class="{% if label == resource_slug|capitalize %}active {% endif %}item">{{ label }}</a>
    {% endfor %}
    <div class="right menu">
      <div class="item">
        <div class="ui icon input">
          <input type="text" placeholder="Search...">
          <i class="search link icon"></i>
        </div>
      </div>
      {{ Form.open({url: url('/logout'), class: 'item'})|raw }}
      <button type="submit" class="ui button button--link">Logout</button>
      {{ Form.close()|raw }}
    </div>
  </div>
</div>
<div class="ui hidden divider"></div>