{% extends 'radmin::laravel-form-builder/field' %}

{% block content %}
  {% if showField %}
    {% if options.empty_value %}
      {% set choices = {'': options.empty_value} + options.choices %}
    {% else %}
      {% set choices = options.choices %}
    {% endif %}
    {{ Form.select(name, choices, options.selected, options.attr)|raw }}
  {% endif %}
{% endblock %}
